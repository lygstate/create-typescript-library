{
  "name": "create-typescript-library",
  "version": "0.0.0",
  "description": "A repository template for a TypeScript library.",
  "main": "lib/umd/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:kettanaito/create-typescript-library.git",
  "author": "Artem Zakharchenko <kettanaito@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "start": "rollup -c rollup.config.ts -w",
    "lint": "eslint ./{src,test}/**/*.ts",
    "clean": "rimraf ./lib",
    "build": "yarn lint && yarn clean && rollup -c rollup.config.ts",
    "test": "jest test",
    "test:lib": "jest STANDARDS.ts --testRegex=\"(STANDARDS\\.ts)\"",
    "prepublishOnly": "yarn build && yarn test:lib && yarn test"
  },
  "files": [
    "lib",
    "README.md"
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">= 12.18.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.67.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
